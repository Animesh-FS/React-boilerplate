{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop":true,
        "noUnusedLocals":false,
        "noUnusedParameters": false
    },
    "include": [
        "src/**/*",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}